# Copy this file to `.env` and adjust values as needed.

# --- PostgreSQL & pgvector ---
POSTGRES_DB=vector_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Optional SSL mode for Postgres
# POSTGRES_SSLMODE=prefer

# --- OpenAI ---
# Required for embeddings and LLM calls
OPENAI_API_KEY=sk-...

# --- Models & Vector settings ---
GPT_MODEL=gpt-4o-mini
GPT_EMBEDDING_ENGINE=text-embedding-3-large
DEFAULT_CHUNK_SIZE=1536
PGVECTOR_TABLE=vector_embeddings_1536
PGVECTOR_DIMENSIONS=1536
PGVECTOR_TOP_K=3

# --- Frontend/Backend ports ---
PORT=8001
BACKEND_URL=http://localhost:8001

# --- pgAdmin (Docker Compose only) ---
PGADMIN_DEFAULT_EMAIL=you@example.com
PGADMIN_DEFAULT_PASSWORD=admin
